<Window x:Class="PryGuard.UI.Views.PryGuardProfileSettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PryGuard.UI.ViewModels"
        
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:PryGuard.Core.Browser.Settings"
        xmlns:configs="clr-namespace:PryGuard.Core.Browser.Model.Configs"
        xmlns:converters="clr-namespace:PryGuard.UI.Converters"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="Settings" Height="1100" Width="800"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown"
        WindowState="{Binding WindowState}"
        BorderBrush="#d8281b"
        BorderThickness="1">
    <!--550-->
    <Window.DataContext>
        <vm:PryGuardProfileSettingsViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <converters:EnumToComboBoxItemConverter x:Key="EnumToComboBoxItemConverter" />
            <ObjectDataProvider MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}"
                            x:Key="OSVersionDataProvider">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="configs:OSVersion" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            <ObjectDataProvider MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}"
                            x:Key="BrowserLanguageDataProvider">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="local:BrowserLanguage" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            <BooleanToVisibilityConverter x:Key="b2v" />
            <converters:EnumBooleanConverter x:Key="EnumBooleanConverter" />
            <converters:ValueToStringConverter x:Key="ValueToStringConverter" />
            <converters:StringToDoubleConverter x:Key="StringToDoubleConverter" />
            <converters:StringToIntParamConverter x:Key="StringToIntParamConverter" />
            <converters:StringToIntInputConverter x:Key="StringToIntInputConverter" />
            <converters:BoolToValueConverter x:Key="BoolToValueConverter" FalseValue="OFF" TrueValue="ON"/>
            <converters:BoolRadioConverter x:Key="BoolRadioConverter"/>
            <converters:BoolRadioConverter x:Key="InverseBoolRadioConverter" Inverse="True"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Services/UI/Styles/DrawImageStyles.xaml" />
                <ResourceDictionary Source="/Services/UI/Styles/UIElementStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <StackPanel
            Grid.Row="0"
            Grid.Column="2"
            HorizontalAlignment="Right" 
            VerticalAlignment="Top" Orientation="Horizontal">

            <Border 
                Height="16" Width="16"
                CornerRadius="8"  Margin="5"
                Background="{StaticResource ThemeBrushGreen}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDown">
                        <i:InvokeCommandAction Command="{Binding ChangeWindowStateCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" Color="{StaticResource ThemeColorGreen}"/>
                </Border.Effect>
            </Border>
            <Border
                Height="16" Width="16"
                CornerRadius="8" Margin="5"
                Background="{StaticResource ThemeBrushRed}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDown">
                        <i:InvokeCommandAction Command="{Binding CloseProfileSettingsCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" Color="{StaticResource ThemeColorRed}"/>
                </Border.Effect>
            </Border>

        </StackPanel>
        <StackPanel 
            Margin="0,24,0,0"
            Grid.ColumnSpan="2"
            Height="25"
            Width="Auto"
            Orientation="Horizontal"
            Background="#1c1c1c">
            <Button Content="Import Existing"
            Width="90"
            Height="22"
            Margin="500,0,0,0"
            Command="{Binding ImportProfileCommand}"
            Style="{StaticResource ButtonEnableDisableProfileStyle}" />

            <!--To implement command-->
            <Button
                Content="New Fingerprint"
                Width="100"
                Height="22"
                Margin="20,0,20,0"
                Style="{StaticResource ButtonEnableDisableProfileStyle}" Command="{Binding NewFingerprintCommand}" Click="Button_Click_1"/>
            <Button
                Content="{Binding SaveProfileButtonContent}"
                Width="60"
                Height="22"
                Margin="0,1,0,0"
                Style="{StaticResource ButtonEnableDisableProfileStyle}"
                Command="{Binding SaveProfileCommand}"/>
        </StackPanel>
        <ScrollViewer
            VerticalScrollBarVisibility="Visible"
            Grid.Column="0"
            Grid.Row="1">
            <Grid >
                <!-- Set a design-time height for the Grid -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition MinHeight="40" Height="Auto"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition MinHeight="40" Height="Auto"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition MinHeight="40" Height="Auto"/>
                    <RowDefinition MinHeight="40" Height="Auto"/>
                    <RowDefinition MinHeight="40" Height="Auto"/>
                    <RowDefinition MinHeight="40" Height="Auto"/>
                    <RowDefinition MinHeight="40" Height="Auto"/>
                    <RowDefinition MinHeight="40" Height="Auto"/>
                    <RowDefinition MinHeight="40" Height="Auto"/>
                    <RowDefinition MinHeight="40" Height="Auto"/>
                    <RowDefinition MinHeight="40" Height="Auto"/>
                    <RowDefinition MinHeight="40" Height="Auto"/>
                    <RowDefinition MinHeight="40" Height="Auto"/>
                    <RowDefinition MinHeight="40" Height="Auto"/>
                    <RowDefinition MinHeight="40" Height="Auto"/>
                </Grid.RowDefinitions>

                <!--#region Name-->
                <TextBox
                    Grid.Row="0"
                    Style="{StaticResource ThemeTextbox}"
                    Width="250"
                    Height="22"
                    Text="{Binding PryGuardProf.Name}"
                    Margin="67,0,0,0"
                    HorizontalAlignment="Left"
                    Tag="Name"/>
                <ComboBox
                    Grid.Row="0"
                    Text="{Binding PryGuardProf.Status, Mode=TwoWay}"
                    Style="{StaticResource ThemeCombobox}"
                    Width="110"
                    Height="22"
                    HorizontalAlignment="Right"
                    Margin="0,0,53,0">
                    <ComboBoxItem>READY</ComboBoxItem>
                    <ComboBoxItem>BAN</ComboBoxItem>
                    <ComboBoxItem>NEW</ComboBoxItem>
                </ComboBox>
                <!--#endregion-->

                <!--#region Tags-->
                <TextBox
                    Grid.Row="1"
                    Style="{StaticResource ThemeTextbox}"
                    Margin="14,0,0,0"
                    Width="363"
                    Height="22"
                    Text="{Binding PryGuardProf.Tags}"
                    HorizontalAlignment="Center"
                    Tag="Tags" Background="White"/>
                <!--#endregion-->

                <!--#region Choose OS-->
                <RadioButton 
                    Grid.Row="2"
                    Style="{StaticResource ThemeRadioBSettingsMainTheme}"
                    Content="WINDOWS"
                    IsChecked="True"
                    GroupName="ChooseOS"
                    HorizontalAlignment="Left"
                    Margin="128,0,0,0"/>
                <RadioButton 
                    Grid.Row="2"
                    Style="{StaticResource ThemeRadioBSettingsMainTheme}"
                    Content="MACOS"
                    IsEnabled="False"
                    HorizontalAlignment="Center"
                    Margin="10,0,0,0"
                    GroupName="ChooseOS"/>
                <RadioButton 
                    Grid.Row="2"
                    Style="{StaticResource ThemeRadioBSettingsMainTheme}"
                    Content="LINUX"
                    IsEnabled="False"
                    GroupName="ChooseOS"
                    HorizontalAlignment="Right"
                    Margin="0,0,118,0"/>

                <!--#endregion-->

                <!--#region Proxy-->
                <RadioButton 
                    Grid.Row="3"
                    Style="{StaticResource ThemeRadioBSettingsMainTheme}"
                    Content="NO PROXY"
                    GroupName="Proxy"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="128,10,0,0"/>
                <RadioButton 
                    Grid.Row="3"
                    x:Name="rbNewProxy"
                    Style="{StaticResource ThemeRadioBSettingsMainTheme}"
                    Content="NEW PROXY"
                    GroupName="Proxy"
                    IsChecked="True"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="10,10,0,0"/>
                <RadioButton 
                    Grid.Row="3"
                    x:Name="rbSavedProxies"
                    Style="{StaticResource ThemeRadioBSettingsMainTheme}"
                    Content="SAVED PROXIES"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,10,118,0"
                    GroupName="Proxy"/>
                <StackPanel 
                    Grid.Row="3"
                    Width="363"
                    Height="45"
                    Orientation="Horizontal"
                    Margin="14,35,0,0"
                    Visibility="{Binding IsChecked,ElementName=rbNewProxy,Converter={StaticResource b2v}}">
                    <RadioButton 
                        Grid.Row="3"
                        Style="{StaticResource ThemeRadioBSettingsMainTheme}"
                        Content="HTTP"
                        Height="16"
                        Width="30"
                        IsChecked="{Binding PryGuardProf.Proxy.IsHTTP}"
                        GroupName="ProxyType"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="119,0,0,0"/>
                    <RadioButton 
                        Grid.Row="3"
                        Style="{StaticResource ThemeRadioBSettingsMainTheme}"
                        Content="SOCKS4"
                        Height="16"
                        Width="43"
                        IsEnabled="False"
                        IsChecked="False"
                        GroupName="ProxyType"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="0,0,0,0"/>
                    <RadioButton 
                        Grid.Row="3"
                        Style="{StaticResource ThemeRadioBSettingsMainTheme}"
                        Content="SOCKS5"
                        Height="16"
                        Width="43"
                        IsEnabled="False"
                        IsChecked="False"
                        GroupName="ProxyType"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"/>
                    <TextBox
                        Grid.Row="3"
                        Height="22"
                        Width="363"
                        Margin="-235,20,0,0"
                        Tag="Proxy"
                        Foreground="{Binding TbProxyBrush}"
                        Text="{Binding PryGuardProf.Proxy.ProxyLine}"
                        Style="{StaticResource ThemeTextbox}"/>
                    <TextBlock 
                        Grid.Row="3"
                        Width="17"
                        Height="17"
                        HorizontalAlignment="Right"
                        Margin="-100,22,5,0"
                        Cursor="Help">
                        <TextBlock.ToolTip>
                            <ToolTip Width="160" Height="60">
                                <StackPanel>
                                    <TextBlock
                                        TextWrapping="Wrap"
                                        Text="Valid proxy formats: 
                                        ● host:port 
                                        ● host:port:login:password"/>
                                </StackPanel>
                            </ToolTip>
                        </TextBlock.ToolTip>
                    <StackPanel>
                        <Image 
                            Margin="0,0,0,0"
                            Source="{StaticResource ProxyInfoHelpImage}" 
                            Height="15" Width="15"/>
                    </StackPanel>
                    </TextBlock>
                    <Button
                        Grid.Row="3"
                        Width="22"
                        Style="{StaticResource ThemeButtonProfilesWork}"
                        Margin="-75,22,0,0"
                        Height="20"
                        Command="{Binding CheckProxyCommand}">
                        <StackPanel>
                            <Image 
                                Margin="-1,1,0,0"
                                Source="{StaticResource CheckConnectionImage}" 
                                Height="18" Width="18"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <ComboBox
                    Grid.Row="3"
                    Width="363"
                    Height="22"
                    Margin="14,35,0,0"
                    Style="{StaticResource ThemeCombobox}"
                    Visibility="{Binding IsChecked, ElementName=rbSavedProxies, Converter={StaticResource b2v}}"
                    ItemsSource="{Binding SavedProxies}"
                    SelectedItem="{Binding PryGuardProf.Proxy.ProxyLine}"
                     />
                <!--#endregion-->

                <!--#region Cookie-->

                <StackPanel Grid.Row="4" Orientation="Horizontal">
                    <TextBox
                        Style="{StaticResource ThemeTextbox}"
                        Width="363"
                        Height="100"
                        Tag="Cookies"
                        Margin="67,0,0,0"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Left"
                        Text="{Binding PryGuardProf.Cookies, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                        AcceptsReturn="True"  
                        VerticalScrollBarVisibility="Auto" />

                    <TextBlock
                        Width="16"
                        Height="17"
                        Margin="-110,-73,0,0"
                        Cursor="Help" RenderTransformOrigin="3,0.255" HorizontalAlignment="Right">
                        <TextBlock.ToolTip>
                            <ToolTip Width="160" Height="60">
                                <StackPanel>
                                    <TextBlock
                                        TextWrapping="Wrap"
                                        Text="Valid cookie formats: 
                                        ● key=value; Domain=URL;
                                        ● Include all necessary parts "
                                        
                                        />
                                </StackPanel>
                            </ToolTip>
                        </TextBlock.ToolTip>
                        <StackPanel>
                            <Image 
                                Margin="-5.5,0,0,0"
                                Source="{StaticResource ProxyInfoHelpImage}" 
                                Height="15" Width="15"/>
                        </StackPanel>
                    </TextBlock>


                </StackPanel>


                <!--#endregion-->

                <!--#region Useragent-->
                <TextBlock
                    Grid.Row="5"
                    Style="{StaticResource ThemeTextBlock}"
                    Text="Useragent"
                    Margin="70,0,0,0"
                    HorizontalAlignment="Left"
                    FontSize="13"/>
                <TextBox
                    Grid.Row="5"
                    Style="{StaticResource ThemeTextbox}"
                    Width="280"
                    Margin="0,0,53,0"
                    Text="{Binding PryGuardProf.FakeProfile.UserAgent}"
                    HorizontalAlignment="Right"
                    Tag=""/>
                <!--#endregion-->

                <!--#region OS Version-->
                <TextBlock
                    Grid.Row="6"
                    Style="{StaticResource ThemeTextBlock}"
                    Text="OS Version"
                    Margin="70,12,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    FontSize="13"/>
                <ComboBox
                    Grid.Row="6"
                    Style="{StaticResource ThemeCombobox}"
                    Width="150"
                    Margin="210,5,0,0"
                    SelectedIndex="0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Visibility="{Binding IsChecked, ElementName=rbScreen, Converter={StaticResource b2v}}"
                    SelectionChanged="ComboBoxOS_SelectionChanged"
                    ItemsSource="{Binding Source={StaticResource OSVersionDataProvider}}"
                    SelectedItem="{Binding PryGuardProf.FakeProfile.OsVersion, Mode=TwoWay}">
                </ComboBox>
                <!--#endregion-->
                <!--#region Adblock-->
                <StackPanel Grid.Row="10" Orientation="Horizontal">
                    <TextBlock
        Style="{StaticResource ThemeTextBlock}"
        Text="Adblock"
        Margin="70,12,0,0"
        VerticalAlignment="Top"
        HorizontalAlignment="Left"
        FontSize="13"/>
                    <!-- Tooltip Icon -->
                    <TextBlock
        Width="16"
        Height="17"
        Margin="5,1,0,0"
        Cursor="Help">
                        <TextBlock.ToolTip>
                            <ToolTip Width="160" Height="60">
                                <StackPanel>
                                    <TextBlock
                        TextWrapping="Wrap"
                        Text="Enable or disable the ad blocker to prevent unwanted advertisements from loading."/>
                                </StackPanel>
                            </ToolTip>
                        </TextBlock.ToolTip>
        <Image 
            Source="{StaticResource ProxyInfoHelpImage}" 
            Height="15" Width="15"/>
    </TextBlock>
                </StackPanel>
                <RadioButton 
    Grid.Row="10"
    Style="{StaticResource ThemeRadioBSettingsMainTheme}"
    Content="OFF"
    IsChecked="{Binding PryGuardProf.IsAdBlock,
    Converter={StaticResource InverseBoolRadioConverter}}"
    GroupName="IsAdblock"
    Margin="210,10,0,0"
    VerticalAlignment="Top"
    HorizontalAlignment="Left"/>
                <RadioButton 
    Grid.Row="10"
    Style="{StaticResource ThemeRadioBSettingsMainTheme}"
    Content="ON"
    IsChecked="{Binding PryGuardProf.IsAdBlock,
    Converter={StaticResource BoolRadioConverter}}"
    GroupName="IsAdblock"
    VerticalAlignment="Top"
    HorizontalAlignment="Right"
    Margin="0,10,114,0"/>
                <!--#endregion-->

                <!--#region Do not track -->
                <StackPanel Grid.Row="7" Orientation="Horizontal">
                    <TextBlock
        Style="{StaticResource ThemeTextBlock}"
        Text="Do not track"
        Margin="70,12,0,0"
        VerticalAlignment="Top"
        HorizontalAlignment="Left"
        FontSize="13"/>
                    <!-- Tooltip Icon -->
                    <TextBlock
        Width="16"
        Height="17"
        Margin="5,0,0,0"
        Cursor="Help">
                        <TextBlock.ToolTip>
                            <ToolTip Width="160" Height="60">
                                <StackPanel>
                                    <TextBlock
                        TextWrapping="Wrap"
                        Text="Enable Do Not Track to prevent websites from tracking your browsing activities."/>
                                </StackPanel>
                            </ToolTip>
                        </TextBlock.ToolTip>
        <Image 
            Source="{StaticResource ProxyInfoHelpImage}" 
            Height="15" Width="15" RenderTransformOrigin="0.578,0.544"/>
    </TextBlock>
                </StackPanel>
                <RadioButton 
    Grid.Row="7"
    Style="{StaticResource ThemeRadioBSettingsMainTheme}"
    IsChecked="{Binding PryGuardProf.FakeProfile.IsSendDoNotTrack,
    Converter={StaticResource InverseBoolRadioConverter}}"
    Content="OFF"
    GroupName="DoNotTrack"
    Margin="210,10,0,0"
    VerticalAlignment="Top"
    HorizontalAlignment="Left"/>
                <RadioButton 
    Grid.Row="7"
    Style="{StaticResource ThemeRadioBSettingsMainTheme}"
    Content="ON"
    IsChecked="{Binding PryGuardProf.FakeProfile.IsSendDoNotTrack,
    Converter={StaticResource BoolRadioConverter}}"
    GroupName="DoNotTrack"
    VerticalAlignment="Top"
    HorizontalAlignment="Right"
    Margin="0,10,114,0"/>
                <!--#endregion-->

                <!-- Repeat similar patterns for other sections -->

                <!--#region Save Cache-->
                <StackPanel Grid.Row="8" Orientation="Horizontal">
                    <TextBlock
        Style="{StaticResource ThemeTextBlock}"
        Text="Save Cache"
        Margin="70,12,0,0"
        VerticalAlignment="Top"
        HorizontalAlignment="Left"
        FontSize="13"/>
                    <!-- Tooltip Icon -->
                    <TextBlock
        Width="16"
        Height="17"
        Margin="5,0,0,0"
        Cursor="Help">
                        <TextBlock.ToolTip>
                            <ToolTip Width="160" Height="60">
                                <StackPanel>
                                    <TextBlock
                        TextWrapping="Wrap"
                        Text="Choose whether to save cache data in memory for faster load times."/>
                                </StackPanel>
                            </ToolTip>
                        </TextBlock.ToolTip>
        <Image 
            Source="{StaticResource ProxyInfoHelpImage}" 
            Height="15" Width="15"/>
    </TextBlock>
                </StackPanel>
                <RadioButton 
    Grid.Row="8"
    Style="{StaticResource ThemeRadioBSettingsMainTheme}"
    Content="OFF"
    IsChecked="{Binding PryGuardProf.IsLoadCacheInMemory,
    Converter={StaticResource InverseBoolRadioConverter}}"
    GroupName="IsLoadCache"
    Margin="210,10,0,0"
    VerticalAlignment="Top"
    HorizontalAlignment="Left"/>
                <RadioButton 
    Grid.Row="8"
    Style="{StaticResource ThemeRadioBSettingsMainTheme}"
    Content="ON"
    IsChecked="{Binding PryGuardProf.IsLoadCacheInMemory,
    Converter={StaticResource BoolRadioConverter}}"
    GroupName="IsLoadCache"
    VerticalAlignment="Top"
    HorizontalAlignment="Right"
    Margin="0,10,114,0"/>
                <!--#endregion-->

                <!--#region Load Image-->
                <StackPanel Grid.Row="9" Orientation="Horizontal">
                    <TextBlock
        Style="{StaticResource ThemeTextBlock}"
        Text="Load image"
        Margin="70,12,0,0"
        VerticalAlignment="Top"
        HorizontalAlignment="Left"
        FontSize="13"/>
                    <!-- Tooltip Icon -->
                    <TextBlock
        Width="16"
        Height="17"
        Margin="5,1,0,0"
        Cursor="Help">
                        <TextBlock.ToolTip>
                            <ToolTip Width="160" Height="60">
                                <StackPanel>
                                    <TextBlock
                        TextWrapping="Wrap"
                        Text="Enable or disable the loading of images to improve page load performance."/>
                                </StackPanel>
                            </ToolTip>
                        </TextBlock.ToolTip>
        <Image 
            Source="{StaticResource ProxyInfoHelpImage}" 
            Height="15" Width="15"/>
    </TextBlock>
                </StackPanel>
                <RadioButton 
    Grid.Row="9"
    Style="{StaticResource ThemeRadioBSettingsMainTheme}"
    IsChecked="{Binding PryGuardProf.IsLoadImage,
    Converter={StaticResource InverseBoolRadioConverter}}"
    Content="OFF"
    GroupName="IsLoadImage"
    Margin="210,10,0,0"
    VerticalAlignment="Top"
    HorizontalAlignment="Left"/>
                <RadioButton 
    Grid.Row="9"
    Style="{StaticResource ThemeRadioBSettingsMainTheme}"
    Content="ON"
    IsChecked="{Binding PryGuardProf.IsLoadImage,
    Converter={StaticResource BoolRadioConverter}}"
    GroupName="IsLoadImage"
    VerticalAlignment="Top"
    HorizontalAlignment="Right"
    Margin="0,10,114,0"/>
                <!--#endregion-->

                <!--#region Hide Canvas-->
                <StackPanel Grid.Row="11" Orientation="Horizontal">
                    <TextBlock
        Style="{StaticResource ThemeTextBlock}"
        Text="Hide Canvas"
        Margin="70,12,0,0"
        VerticalAlignment="Top"
        HorizontalAlignment="Left"
        FontSize="13"/>
                    <!-- Tooltip Icon -->
                    <TextBlock
        Width="16"
        Height="17"
        Margin="5,1,0,0"
        Cursor="Help">
                        <TextBlock.ToolTip>
                            <ToolTip Width="160" Height="60">
                                <StackPanel>
                                    <TextBlock
                        TextWrapping="Wrap"
                        Text="Toggle the visibility of the HTML5 Canvas to prevent fingerprinting."/>
                                </StackPanel>
                            </ToolTip>
                        </TextBlock.ToolTip>
        <Image 
            Source="{StaticResource ProxyInfoHelpImage}" 
            Height="15" Width="15"/>
    </TextBlock>
                </StackPanel>
                <RadioButton 
    Grid.Row="11"
    Style="{StaticResource ThemeRadioBSettingsMainTheme}"
    Content="OFF"
    IsChecked="{Binding PryGuardProf.FakeProfile.HideCanvas,
    Converter={StaticResource InverseBoolRadioConverter}}"
    GroupName="Canvas"
    Margin="210,10,0,0"
    VerticalAlignment="Top"
    HorizontalAlignment="Left"/>
                <RadioButton 
    Grid.Row="11"
    Style="{StaticResource ThemeRadioBSettingsMainTheme}"
    Content="ON"
    IsChecked="{Binding PryGuardProf.FakeProfile.HideCanvas,
    Converter={StaticResource BoolRadioConverter}}"
    GroupName="Canvas"
    VerticalAlignment="Top"
    HorizontalAlignment="Right"
    Margin="0,10,114,0"/>
                <!--#endregion-->

                <!--#region WebRTC-->
                <StackPanel Grid.Row="12" Orientation="Horizontal">
                    <TextBlock
        Style="{StaticResource ThemeTextBlock}"
        Text="WebRTC"
        Margin="70,12,0,0"
        VerticalAlignment="Top"
        HorizontalAlignment="Left"
        FontSize="13"/>
                    <!-- Tooltip Icon -->
                    <TextBlock
        Width="16"
        Height="17"
        Margin="5,1,0,0"
        Cursor="Help">
                        <TextBlock.ToolTip>
                            <ToolTip Width="160" Height="60">
                                <StackPanel>
                                    <TextBlock
                        TextWrapping="Wrap"
                        Text="Control WebRTC settings to prevent IP leaks and enhance privacy."/>
                                </StackPanel>
                            </ToolTip>
                        </TextBlock.ToolTip>
        <Image 
            Source="{StaticResource ProxyInfoHelpImage}" 
            Height="15" Width="15"/>
    </TextBlock>
                </StackPanel>
                <RadioButton 
    Grid.Row="12"
    Style="{StaticResource ThemeRadioBSettingsMainTheme}"
    Content="OFF"
    GroupName="WebRTC"
    Margin="210,10,0,0"
    IsChecked="{Binding PryGuardProf.FakeProfile.WebRtcSettings.WebRtcStatus,
    Converter={StaticResource EnumBooleanConverter}, ConverterParameter=OFF}"
    VerticalAlignment="Top"
    HorizontalAlignment="Left"/>
                <RadioButton 
    Grid.Row="12"
    Style="{StaticResource ThemeRadioBSettingsMainTheme}"
    Content="REAL"
    GroupName="WebRTC"
    VerticalAlignment="Top"
    HorizontalAlignment="Right"
    IsChecked="{Binding PryGuardProf.FakeProfile.WebRtcSettings.WebRtcStatus,
    Converter={StaticResource EnumBooleanConverter}, ConverterParameter=REAL}"
    Margin="0,10,114,0"/>
                <RadioButton 
    Grid.Row="12"
    IsEnabled="False"
    Visibility="Hidden"
    x:Name="rbWebRTC"
    Style="{StaticResource ThemeRadioBSettingsMainTheme}"
    Content="MANUAL"
    GroupName="WebRTC"
    Margin="0,10,74,0"
    VerticalAlignment="Top"
    HorizontalAlignment="Right"
    CommandParameter="MANUAL"/>
                <TextBox
    Grid.Row="12"
    IsEnabled="False"
    Style="{StaticResource ThemeTextbox}"
    Width="239"
    Margin="96,40,0,10"
    VerticalAlignment="Top"
    HorizontalAlignment="Center"
    Tag="IP Address"
    Text="{Binding PryGuardProf.FakeProfile.WebRtcSettings.PublicIp}"
    Visibility="{Binding IsChecked,ElementName=rbWebRTC,Converter={StaticResource b2v}}"/>
                <!--#endregion-->

                <!--#region WebGL-->
                <StackPanel Grid.Row="13" Orientation="Horizontal">
                    <TextBlock
        Style="{StaticResource ThemeTextBlock}"
        Text="WebGL"
        Margin="70,12,0,0"
        VerticalAlignment="Top"
        HorizontalAlignment="Left"
        FontSize="13"/>
                    <!-- Tooltip Icon -->
                    <TextBlock
        Width="16"
        Height="17"
        Margin="5,1,0,0"
        Cursor="Help">
                        <TextBlock.ToolTip>
                            <ToolTip Width="160" Height="60">
                                <StackPanel>
                                    <TextBlock
                        TextWrapping="Wrap"
                        Text="Manage WebGL settings to control rendering and prevent fingerprinting."/>
                                </StackPanel>
                            </ToolTip>
                        </TextBlock.ToolTip>
        <Image 
            Source="{StaticResource ProxyInfoHelpImage}" 
            Height="15" Width="15"/>
    </TextBlock>
                </StackPanel>
                <RadioButton 
    Grid.Row="13"
    Style="{StaticResource ThemeRadioBSettingsMainTheme}"
